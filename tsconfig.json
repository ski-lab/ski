{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "removeComments": true,
    "paths": {
      "ski/*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true
  }
}